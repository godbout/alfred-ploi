{
    "name": "godbout/alfred-ploi",
    "description": "Do stuff with Ploi",
    "keywords": [
        "ploi",
        "ploi API"
    ],
    "homepage": "https://github.com/godbout/alfred-ploi",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Guillaume Leclerc",
            "email": "guill@sleeplessmind.com.mo",
            "role": "main guy"
        }
    ],
    "require": {
        "php": "^7.2",
        "godbout/alfred-workflow-workflow": "^1.0",
        "guzzlehttp/guzzle": "^6.3",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "codedungeon/phpunit-result-printer": "^0.27.0",
        "symfony/yaml": "^4"
    },
    "autoload": {
        "psr-4": {
            "Godbout\\Alfred\\Ploi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --color=always",
        "format": "php-cs-fixer fix src tests -vvv --config=.php_cs.dist --ansi"
    }
}
